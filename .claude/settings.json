{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && npm run format 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "upgrading-expo@expo-plugins": true,
    "expo-deployment@expo-plugins": true,
    "expo-app-design@expo-plugins": true
  }
}
